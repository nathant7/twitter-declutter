{
  "manifest_version": 3,
  "name": "X+ // A Twitter Declutter Extension",
  "version": "2025.09.13",
  "description": "Clean up your X/Twitter experience by removing ads, clutter, and unwanted sections",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
